{
  "expo": {
    "name": "Presentes",
    "slug": "presentes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.presentes.app",
      "infoPlist": {
        "NSContactsUsageDescription": "Este app precisa acessar seus contatos para facilitar a adição de pessoas para quem você quer guardar ideias de presentes.",
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar suas fotos para você adicionar imagens de ideias de presentes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.presentes.app",
      "permissions": [
        "READ_CONTACTS",
        "WRITE_CONTACTS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permitir que $(PRODUCT_NAME) acesse suas fotos para adicionar imagens de presentes.",
          "cameraPermission": "Permitir que $(PRODUCT_NAME) acesse sua câmera para tirar fotos de presentes."
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "scheme": "presentes",
    "experiments": {
      "typedRoutes": true
    }
  }
}
